brew install caskroom/cask/brew-cask

# iTerm2 with ZSH
brew cask install --appdir='/Applications' iterm2
brew install zsh zsh-completions
brew install tmux

# core dev items
brew install wget
brew install node

# Node stuff
npm install -g coffee-script
npm install -g avn avn-nvm avn-n
avn setup

